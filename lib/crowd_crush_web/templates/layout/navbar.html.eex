<nav class="navbar navbar-expand-md navbar-light bg-light">
  <div class='container'>

    <%# Logo %>
    <a class="navbar-brand" href="/">CrowdCrush</a>

    <%# Mobile Button %>
    <button
      class="navbar-toggler"
      data-toggle="collapse"
      data-target="#menu-collapse"
      aria-controls='navbarSupportedContent'
      aria-expanded="false"
      aria-label="Toggle navigation"
      type='button'
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <%# Menu %>
    <div class="collapse navbar-collapse" id="menu-collapse">
      <ul class="navbar-nav flex-grow-1 mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="<%= Routes.page_path(@conn, :about) %>">About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= Routes.video_path(@conn, :index) %>">Videos</a>
        </li>
      </ul>

      <ul class="navbar-nav mr-auto">
        <%= if @current_user do %>
          <li class="nav-item"><span class='navbar-text'><%= @current_user.username %></span></li>
          <li class="nav-item">
            <%= link [icon("off"), "Logout"],
              to: Routes.session_path(@conn, :delete, @current_user),
              class: "nav-link",
              method: "delete"
            %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link "Login", to: Routes.session_path(@conn, :new), class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
